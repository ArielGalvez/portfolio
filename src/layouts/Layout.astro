---
import Navbar from '../components/Navbar';
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Welcome to my portfolio! I am Ariel Galvez, full stack developer, and this is where I unveil my creative journey. Through a diverse array of projects, I offer a glimpse into my world of innovative solutions, captivating designs, and meticulous craftsmanship. Join me as we explore the boundless possibilities of creativity together.' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/portfolio/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar client:only="react" />
		<slot />
		<footer class="bg-blue-500 py-4 px-3 text-center text-white mt-auto">
			<p>
				Powered by @ArielGalvez, © 2023
			</p>
		</footer>
	</body>
</html>
<style is:global>
	@import url(https://fonts.googleapis.com/css?family=Barlow+Semi+Condensed);
	:root {
		--bg-color: #f6f6f6;
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
		--tw-gradient-stops: #3B82F6 50%, rgb(166,218,248), rgb(211,203,255), rgb(171,238,219), rgb(254,202,177), rgb(254,177,191);
	}

	.dark {
  	color-scheme: dark;
		--bg-color: #292b31;
	}

	html {
		font-family: 'Barlow Semi Condensed', system-ui, sans-serif;
		background-color: var(--bg-color);
		scroll-behavior: smooth;
	}

	.rain {
    /* padding: 0 0.25rem; */
  }
  .drop {
		/* margin: 0.25rem 0; */
    /* padding: 1rem; */
    display: block;
    width: 2vmax;
    height: 2vmax;
    font-size: 2vmax;
    /* color: #9bff9b11; */
    color: transparent;
    text-align: center;
  }

	/* cat */
	/* end cat */

	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	@layer components {
		.arrow {
			@apply before:absolute before:w-4 before:h-4 before:top-8 before:bg-white before:rotate-45;
			@apply before:dark:bg-gray-700;
		}
	}
</style>
<script is:inline>
if (document.startViewTransition) {
	window.navigation.addEventListener('navigate', (event) => {
		const toUrl = new URL(event.destination.url)

		// es una página externa? si es así, lo ignoramos
		if (location.origin !== toUrl.origin || toUrl.protocol === 'blob:') return

		// if (location.href.includes('#')) return

		// si es una navegación en el mismo dominio (origen)
		event.intercept({
			async handler() {
				// vamos a cargar la página de destino
				// utilizando un fetch para obtener el HTML
				const response = await fetch(toUrl.pathname) // /clean-code
				const text = await response.text()
				// quedarnos sólo con el contenido del html dentro de la etiqueta body
				// usamos un regex para extraerlo
				const [, data] = text.match(/<body>([\s\S]*)<\/body>/i)

				// utilizar la api de View Transition API
				document.startViewTransition(() => {
					// el scroll hacia arriba del todo
					document.body.innerHTML = data
					// document.documentElement.scrollTop = 0
				})
			}
		})
	})
}
</script>
