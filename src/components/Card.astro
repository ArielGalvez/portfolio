---
export interface Props {
  id: string;
  title: string;
  img: string;
  repo?: string;
  demo: string;
}

const { id, title, img, repo, demo } = Astro.props;
---
<li class="relative transition-all shadow-sm hover:contrast-125 hover:shadow-md">
  <a href={`/${id}`}>
    <img
      alt={`project ${title}`}
      class='aspect-[640/487] h-full object-cover w-full max-w-full rounded'
      src={img}
      style={`view-transition-name: project-${id}`}
    />
    <div class="absolute flex justify-between bottom-0 left-0 h-40px w-full bg-white dark:bg-gray-700 p-2 rounded-bl rounded-br font-semibold">
      <h3 style={`view-transition-name: project-title-${id}`}>
        {title}
      </h3>
      <div class="flex gap-2">
        {
          repo &&
          <a href={repo} class=" hover:text-blue-500 text-2xl " style={`view-transition-name: project-repo-${id}`}>
            <svg  stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 16 16" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path></svg>
          </a>
        }
        <a href={demo} class=" hover:text-blue-500 text-2xl" style={`view-transition-name: project-demo-${id}`}>
          <svg stroke="currentColor" fill="none" stroke-width="2" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4"></path><path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4"></path><path d="M12.5 3a16.989 16.989 0 0 1 1.828 4"></path><path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4"></path><path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4"></path><path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4"></path><path d="M2 10l1 4l1.5 -4l1.5 4l1 -4"></path><path d="M17 10l1 4l1.5 -4l1.5 4l1 -4"></path><path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4"></path></svg>
        </a>
      </div>
    </div>
  </a>
</li>
