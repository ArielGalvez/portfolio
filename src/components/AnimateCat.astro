---

<div id='wrapper'>
	<section class='cat'>
		<div class='cat-head'>
			<div class='eyes'>
				<div class='eye'></div>
				<div class='eye'></div>
			</div>
		</div>
		<div class='cat-body'>
			<div class='tail'></div>
		</div>
	</section>
</div>
<!--  -->
<style is:inline>
	.cat {
		margin-top: 20px;
		margin-right: 32px;
	}
	.cat-head {
		width: 40px;
		height: 40px;
		background: #292b31;
		border-radius: 50% 50% 100% 100%;
		position: relative;
	}
	.cat-head::before,
	.cat-head::after {
		width: 10px;
		height: 3px;
		content: '';
		background-color: blue;
		border-radius: 5% 100% 0 0;
		border-top: 10px solid #292b31;
		border-left: 4px solid #292b31;
		position: absolute;
		-webkit-transform: rotate(-5deg);
		transform: rotate(-5deg);
		top: -5px;
		left: 0px;
	}
	.cat-head::after {
		left: auto;
		right: 0px;
		-webkit-transform: scaleX(-1) rotate(-5deg);
		transform: scaleX(-1) rotate(-5deg);
		-webkit-animation: move-ear 3s ease-in infinite;
		animation: move-ear 3s ease-in infinite;
	}
	.cat-head .eyes {
		height: 30px;
		display: -webkit-box;
		display: -ms-flexbox;
		display: flex;
		-ms-flex-pack: distribute;
		justify-content: space-around;
		-webkit-box-align: center;
		-ms-flex-align: center;
		align-items: center;
	}
	.cat-head .eyes .eye {
		width: 6px;
		height: 6px;
		background-color: #292b31;
		border-radius: 50%;
		-webkit-box-shadow: 0 0 0 3px #00d382;
		box-shadow: 0 0 0 3px #00d382;
		z-index: 5;
		position: relative;
		-webkit-animation: blink 3s ease-out infinite;
		animation: blink 3s ease-out infinite;
	}
	.cat-head .eyes .eye::after {
		content: '';
		width: 2px;
		height: 2px;
		background-color: #ffdfdf;
		border-radius: 50%;
		position: absolute;
		top: 0px;
		left: 3px;
	}
	.cat-head .eyes .eye:last-child {
		-webkit-transform: scaleX(-1);
		transform: scaleX(-1);
	}
	.cat-head .eyes .eye:last-child::after {
		left: auto;
		right: 3px;
	}
	.cat-body {
		height: 80px;
		width: 38px;
		background: #292b31;
		border-radius: 100% 100% 70% 70%;
		position: relative;
		top: -12px;
	}
	.cat-body .tail {
		width: 56px;
		height: 26px;
		background-color: transparent;
		border-radius: 50%;
		border: 8px solid #292b31;
		border-left-color: transparent;
		border-top-color: transparent;
		position: absolute;
		bottom: 0px;
		left: 5px;
		-webkit-animation: move-tail 4s ease-in infinite;
		animation: move-tail 4s ease-in infinite;
	}
	.cat-body .tail::after {
		content: '';
		width: 9px;
		height: 10px;
		background-color: #292b31;
		position: absolute;
		right: -5px;
		border-radius: 50%;
		top: -4px;
		-webkit-transform: skew(44deg, -26deg);
		transform: skew(44deg, -26deg);
	}

	@keyframes blink {
		78%,
		82%,
		86%,
		90% {
			opacity: 1;
		}
		80%,
		88% {
			opacity: 0;
		}
	}

	@keyframes move-ear {
		50%,
		60% {
			-webkit-transform: scaleX(-1) rotate(-5deg);
			transform: scaleX(-1) rotate(-5deg);
		}
		55% {
			-webkit-transform: scaleX(-1) rotate(-30deg);
			transform: scaleX(-1) rotate(-30deg);
		}
	}

	@keyframes move-tail {
		50%,
		60% {
			width: 56px;
		}
		85% {
			width: 40px;
		}
	}
</style>
